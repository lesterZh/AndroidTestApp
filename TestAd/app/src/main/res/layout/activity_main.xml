<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indicator"
        android:id="@+id/btn_indicator"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动画"
        android:id="@+id/btn_animator"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btn_indicator"
        android:layout_toEndOf="@+id/btn_indicator"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新indicator"
        android:id="@+id/btn_new_indicator"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btn_animator"
        android:layout_toEndOf="@+id/btn_animator"/>
</RelativeLayout>